{% extends 'layouts/main.html.twig' %}
{% block title %}Dépenses de l'année{% endblock %}

{% block page_header %}
  <div class="d-flex align-items-center justify-content-between">
    <div>
      <h4 class="fs-16 mb-1">Dépenses — {{ y }}</h4>
      <p class="text-muted mb-0">
        Période : {{ from|date('d/m/Y') }} → {{ to|date('d/m/Y') }} — Total :
        <strong>{{ total|number_format(0,',',' ') }} MRU</strong>
      </p>
    </div>
    <div class="d-flex gap-2">
      <a class="btn btn-ghost-secondary" href="{{ path('cash_index') }}">
        <i class="ri-arrow-left-line"></i> Retour caisse
      </a>
    </div>
  </div>
{% endblock %}

{% block body %}
  <form method="get" class="card mb-3">
    <div class="card-body row g-2 align-items-end">
      <div class="col-md-4">
        <label class="form-label">Année</label>
        <select name="year" class="form-select">
  {% for yy in years %}
    <option value="{{ yy }}" {% if yy == y %}selected{% endif %}>{{ yy }}</option>
  {% endfor %}
</select>
      </div>
      <div class="col-md-2">
        <button class="btn btn-primary w-100"><i class="ri-filter-3-line"></i> Filtrer</button>
      </div>
    </div>
  </form>

  <div class="row g-3">
    <div class="col-lg-7">
      <div class="card">
        <div class="card-header"><h5 class="card-title mb-0">Évolution des dépenses (12 mois)</h5></div>
        <div class="card-body">
          <div id="chart-expenses-year"
               data-labels='{{ labels|json_encode|e('html_attr') }}'
               data-values='{{ values|json_encode|e('html_attr') }}'
               style="height:300px"></div>
        </div>
      </div>
    </div>

    <div class="col-lg-5">
      <div class="card">
        <div class="card-header"><h5 class="card-title mb-0">Répartition par catégorie</h5></div>
        <div class="card-body">
          <div id="chart-expenses-categories-year"
               data-labels='{{ yearCatLabels|json_encode|e('html_attr') }}'
               data-values='{{ yearCatValues|json_encode|e('html_attr') }}'
               style="height:300px"></div>
        </div>
      </div>
    </div>
  </div>

  <div class="card mt-3">
    <div class="card-header"><h5 class="card-title mb-0">Détails des dépenses</h5></div>
    <div class="card-body">
      <div class="table-responsive table-card">
        <table class="table table-hover align-middle">
          <thead class="table-light">
            <tr>
              <th>Date</th>
              <th>Catégorie</th>
              <th>Note</th>
              <th class="text-end">Montant (MRU)</th>
            </tr>
          </thead>
          <tbody>
            {% for e in pagination %}
              <tr>
                <td>{{ e.createdAt|date('d/m/Y H:i') }}</td>
                <td>{{ e.category ? e.category.name : 'Non catégorisée' }}</td>
                <td>{{ e.notes ?? '—' }}</td>
                <td class="text-end">{{ e.amount|number_format(0,',',' ') }}</td>
              </tr>
            {% else %}
              <tr><td colspan="4" class="text-center text-muted">Aucune dépense trouvée.</td></tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
      <div class="mt-3">{{ knp_pagination_render(pagination) }}</div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
  <script>
    (function(){
      // Courbe annuelle
      const el1 = document.getElementById('chart-expenses-year');
      const labels1 = JSON.parse(el1.dataset.labels || '[]');
      const values1 = JSON.parse(el1.dataset.values || '[]');
      if (!values1 || values1.length === 0) {
        el1.innerHTML = '<div style="opacity:.8;font-style:italic">Aucune dépense pour cette année.</div>';
      } else {
        new ApexCharts(el1, {
          chart: { type: 'line', height: 300, toolbar: { show:false } },
          series: [{ name: 'Dépenses', data: values1 }],
          xaxis: { categories: labels1 },
          yaxis: { labels: { formatter: v => Intl.NumberFormat('fr-FR').format(v) } },
        }).render();
      }

      // Donut annuel
      const el2 = document.getElementById('chart-expenses-categories-year');
      const labels2 = JSON.parse(el2.dataset.labels || '[]');
      const values2 = JSON.parse(el2.dataset.values || '[]');
      if (!values2 || values2.length === 0) {
        el2.innerHTML = '<div style="opacity:.8;font-style:italic">Aucune dépense catégorisée pour cette année.</div>';
      } else {
        new ApexCharts(el2, {
          chart: { type: 'donut', height: 300 },
          series: values2,
          labels: labels2,
          legend: { position: 'bottom' },
        }).render();
      }
    })();
  </script>
{% endblock %}
