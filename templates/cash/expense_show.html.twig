{% extends 'layouts/main.html.twig' %}
{% block title %}Dépense #{{ expense.id }}{% endblock %}
{% block body %}
  <div class="card">
    <div class="card-body">
      <h5 class="mb-3">Détail de la dépense</h5>
      <ul class="list-group">
        <li class="list-group-item d-flex justify-content-between">
          <span>Date</span><strong>{{ expense.createdAt ? expense.createdAt|date('d/m/Y H:i') : '—' }}</strong>
        </li>
        <li class="list-group-item d-flex justify-content-between">
          <span>Montant</span><strong>{{ expense.amount|number_format(0,',',' ') }} MRU</strong>
        </li>
        <li class="list-group-item">
          <div class="text-muted mb-1">Notes</div>
          <div>{{ expense.notes ?: '—' }}</div>
        </li>
      </ul>
      <div class="mt-3 d-flex gap-2">
        <a href="{{ path('cash_expense_edit', {id: expense.id}) }}" class="btn btn-soft-info">
          <i class="ri-pencil-line"></i> Modifier
        </a>
        <a href="{{ path('cash_index') }}" class="btn btn-ghost-secondary">Retour</a>
      </div>
    </div>
  </div>
{% endblock %}
