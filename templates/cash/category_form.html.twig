{% extends 'layouts/main.html.twig' %}
{% block title %}{{ title }}{% endblock %}
{% block page_header %}
	<div class="row">
		<div class="col-12">
			<div class="page-title-box d-sm-flex align-items-center justify-content-between">
				<div>
					<h4 class="mb-sm-0">
						<i class="ri-price-tag-3-line"></i>
						Gestion de la caisse
					</h4>
					<p class="text-muted mb-0">Créer</p>
				</div>
				<div class="page-title-right">
					<ol class="breadcrumb m-0">
						<li class="breadcrumb-item">
							<a href="{{ path('admin_dashboard') }}">Dashboard</a>
						</li>
						<li class="breadcrumb-item active">Catégorie</li>
					</ol>
				</div>
			</div>
		</div>
	</div>
	<div class="card">
		<div class="card-body">
			<div class="row mb-3 pb-1">
				<div class="d-flex justify-content-between align-items-center mb-3">
					<h4>Catégories de dépenses</h4>
					
				</div>
			</div>
		</div>
	</div>
{% endblock %}
{% block body %}
  {{ form_start(form) }}
  <div class="card">
    <div class="card-body">
      {{ form_row(form.name) }}
      {{ form_row(form.description) }}
      {{ form_row(form.active) }}
    </div>
  </div>
  <div class="mt-3">
    <button class="btn btn-primary"><i class="ri-check-line"></i> Enregistrer</button>
    <a href="{{ path('cash_category_index') }}" class="btn btn-ghost-secondary">Annuler</a>
  </div>
  {{ form_end(form) }}
{% endblock %}
