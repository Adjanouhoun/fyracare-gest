{% extends 'layouts/main.html.twig' %}
{% block title %}{{ title }}{% endblock %}

{% block body %}
  <h4 class="mb-3">{{ title }}</h4>
  {{ form_start(form) }}
  <div class="card">
    <div class="card-body">
      {{ form_row(form.name) }}
      {{ form_row(form.description) }}
      {{ form_row(form.active) }}
    </div>
  </div>
  <div class="mt-3">
    <button class="btn btn-primary"><i class="ri-check-line"></i> Enregistrer</button>
    <a href="{{ path('cash_category_index') }}" class="btn btn-ghost-secondary">Annuler</a>
  </div>
  {{ form_end(form) }}
{% endblock %}
