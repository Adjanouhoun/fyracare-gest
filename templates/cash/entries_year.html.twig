{% extends 'layouts/main.html.twig' %}
{% block title %}Entrées de l'année{% endblock %}

{% block stylesheets %}
<style>
.year-header-card {
    background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
    border: none;
    color: white;
}
.stat-metric {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border-radius: 10px;
    padding: 15px;
    transition: all 0.3s ease;
}
.stat-metric:hover {
    background: rgba(255, 255, 255, 0.15);
    transform: translateY(-3px);
}
.month-badge {
    display: inline-block;
    min-width: 40px;
    text-align: center;
}
</style>
{% endblock %}

{% block page_header %}
  <div class="row">
    <div class="col-12">
      <div class="page-title-box d-sm-flex align-items-center justify-content-between">
        <div>
          <h4 class="mb-sm-0">
            <i class="ri-calendar-2-line text-success me-2"></i>
            Entrées Annuelles
          </h4>
          <p class="text-muted mb-0">Analyse complète des encaissements sur l'année</p>
        </div>
        <div class="page-title-right">
          <ol class="breadcrumb m-0">
            <li class="breadcrumb-item"><a href="{{ path('cash_index') }}">Caisse</a></li>
            <li class="breadcrumb-item active">Entrées Année</li>
          </ol>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

{% block body %}
  {# Header Card Année #}
  <div class="row">
    <div class="col-12">
      <div class="card year-header-card shadow-lg mb-4">
        <div class="card-body p-4">
          <div class="row align-items-center">
            <div class="col-lg-5">
              <div class="d-flex align-items-center">
                <div class="avatar-lg me-3">
                  <span class="avatar-title bg-white bg-opacity-25 rounded fs-1">
                    <i class="ri-calendar-check-line"></i>
                  </span>
                </div>
                <div>
                  <h3 class="text-white mb-1">Année {{ from|date('Y') }}</h3>
                  <p class="text-white-50 mb-0">
                    <i class="ri-calendar-line me-1"></i>
                    {{ from|date('d/m/Y') }} → {{ to|date('d/m/Y') }}
                  </p>
                </div>
              </div>
            </div>
            <div class="col-lg-7 mt-3 mt-lg-0">
              <div class="row g-2">
                <div class="col-md-6">
                  <div class="stat-metric">
                    <p class="text-white-50 mb-1 fs-13">Total Année</p>
                    <h3 class="text-white fw-bold mb-0">
                      {{ total|number_format(0,',',' ') }} MRU
                    </h3>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="stat-metric">
                    <p class="text-white-50 mb-1 fs-13">Moyenne Mensuelle</p>
                    {% set avg = total / 12 %}
                    <h3 class="text-white fw-bold mb-0">
                      {{ avg|round(0)|number_format(0,',',' ') }} MRU
                    </h3>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  {# Sélecteur Année #}
  <div class="row">
    <div class="col-12">
      <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-soft-success border-bottom-dashed">
          <h5 class="card-title mb-0">
            <i class="ri-filter-3-line me-2"></i>
            Sélectionner une année
          </h5>
        </div>
        <div class="card-body">
          <form method="get" class="row g-3 align-items-end">
            <div class="col-md-8">
              <label class="form-label fw-medium">
                <i class="ri-calendar-line me-1 text-success"></i>
                Année
              </label>
              <select name="year" class="form-select form-select-lg">
                {% for yy in [2025, 2024, 2023, 2022, 2021, 2020] %}
                  <option value="{{ yy }}" {% if yy == year %}selected{% endif %}>{{ yy }}</option>
                {% endfor %}
              </select>
            </div>
            <div class="col-md-4">
              <button type="submit" class="btn btn-success w-100 btn-lg">
                <i class="ri-search-line me-1"></i>
                Analyser
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  {# Graphique + Synthèse #}
  <div class="row">
    <div class="col-xl-8">
      <div class="card card-height-100">
        <div class="card-header border-bottom-dashed">
          <div class="d-flex align-items-center">
            <h5 class="card-title flex-grow-1 mb-0">
              <i class="ri-bar-chart-line text-success me-2"></i>
              Évolution Mensuelle
            </h5>
            <div class="flex-shrink-0">
              <button class="btn btn-soft-success btn-sm" onclick="window.print()">
                <i class="ri-printer-line me-1"></i>
                Imprimer
              </button>
            </div>
          </div>
        </div>
        <div class="card-body">
          <div id="chart-entries-year" style="min-height: 380px;" class="apex-charts" dir="ltr"></div>
        </div>
      </div>
    </div>

    <div class="col-xl-4">
      <div class="card card-height-100">
        <div class="card-header border-bottom-dashed bg-soft-info">
          <h5 class="card-title mb-0">
            <i class="ri-pie-chart-2-line me-2"></i>
            Synthèse Annuelle
          </h5>
        </div>
        <div class="card-body">
          {# Total #}
          <div class="mb-4 p-3 bg-success-subtle rounded">
            <div class="d-flex align-items-center justify-content-between">
              <div>
                <p class="text-muted mb-1 fs-13">Total Année</p>
                <h3 class="mb-0 text-success fw-bold">
                  {{ total|number_format(0,',',' ') }}
                  <small class="fs-14">MRU</small>
                </h3>
              </div>
              <div class="avatar-sm">
                <span class="avatar-title bg-success rounded-circle fs-2">
                  <i class="ri-money-dollar-circle-line"></i>
                </span>
              </div>
            </div>
          </div>

          {# Mois actifs #}
          <div class="mb-4">
            <div class="d-flex align-items-center justify-content-between mb-2">
              <span class="text-muted">
                <i class="ri-calendar-check-line me-1"></i>
                Mois avec entrée
              </span>
              {% set activesMonths = values|filter(v => v > 0)|length %}
              <strong>{{ activesMonths }}/12</strong>
            </div>
            {% set percentActive = (activesMonths / 12 * 100) %}
            <div class="progress progress-sm">
              <div class="progress-bar bg-info" role="progressbar" 
                   style="width: {{ percentActive|round(0) }}%">
              </div>
            </div>
            <small class="text-muted">{{ percentActive|round(1) }}% de l'année</small>
          </div>

          {# Moyenne mensuelle #}
          <div class="mb-4">
            <div class="d-flex align-items-center justify-content-between mb-2">
              <span class="text-muted">
                <i class="ri-calculator-line me-1"></i>
                Moyenne / mois
              </span>
              {% set avg = total / 12 %}
              <strong>{{ avg|round(0)|number_format(0,',',' ') }} MRU</strong>
            </div>
            <div class="progress progress-sm">
              {% set maxValue = 0 %}
              {% for v in values %}
                {% if v > maxValue %}
                  {% set maxValue = v %}
                {% endif %}
              {% endfor %}
              {% set percentAvg = maxValue > 0 ? (avg / maxValue * 100) : 0 %}
              <div class="progress-bar bg-warning" role="progressbar" 
                   style="width: {{ percentAvg|round(0) }}%">
              </div>
            </div>
            <small class="text-muted">Comparé au meilleur mois</small>
          </div>

          {# Meilleur mois #}
          {% set maxValue = 0 %}
          {% set maxIndex = 0 %}
          {% for i, v in values %}
            {% if v > maxValue %}
              {% set maxValue = v %}
              {% set maxIndex = i %}
            {% endif %}
          {% endfor %}
          <div class="mb-3 p-3 bg-warning-subtle rounded">
            <div class="d-flex align-items-center justify-content-between">
              <div>
                <p class="text-muted mb-1 fs-13">
                  <i class="ri-trophy-line text-warning me-1"></i>
                  Meilleur mois
                </p>
                <h5 class="mb-0 text-warning">
                  {{ labels[maxIndex] ?? '-' }}
                </h5>
              </div>
              <div class="text-end">
                <h5 class="mb-0 text-warning fw-bold">
                  {{ maxValue|number_format(0,',',' ') }}
                </h5>
                <small class="text-muted">MRU</small>
              </div>
            </div>
          </div>

          {# Actions #}
          <div class="d-grid gap-2 mt-4">
            <a href="{{ path('cash_index') }}" class="btn btn-soft-secondary">
              <i class="ri-arrow-left-line me-1"></i>
              Retour caisse
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  {# Tableau Détaillé #}
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header border-bottom-dashed">
          <div class="d-flex align-items-center">
            <h5 class="card-title flex-grow-1 mb-0">
              <i class="ri-file-list-3-line text-info me-2"></i>
              Détails des Paiements
            </h5>
            <div class="flex-shrink-0">
              <span class="badge bg-info-subtle text-info fs-12">
                {{ pagination.getTotalItemCount }} paiement(s)
              </span>
            </div>
          </div>
        </div>
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-hover align-middle table-nowrap mb-0">
              <thead class="table-light">
                <tr>
                  <th style="width: 50px;">
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" id="checkAll">
                    </div>
                  </th>
                  <th>
                    <i class="ri-calendar-event-line me-1"></i>
                    Date
                  </th>
                  <th>
                    <i class="ri-user-line me-1"></i>
                    Client
                  </th>
                  <th>
                    <i class="ri-service-line me-1"></i>
                    Prestation
                  </th>
                  <th>
                    <i class="ri-bank-card-line me-1"></i>
                    Méthode
                  </th>
                  <th>
                    <i class="ri-file-text-line me-1"></i>
                    Reçu
                  </th>
                  <th class="text-end">
                    <i class="ri-money-dollar-circle-line me-1"></i>
                    Montant
                  </th>
                </tr>
              </thead>
              <tbody>
                {% for p in pagination %}
                  <tr>
                    <td>
                      <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="{{ p.id }}">
                      </div>
                    </td>
                    <td>
                      <div class="d-flex flex-column">
                        <span class="fw-medium text-dark">
                          {{ p.paidAt ? p.paidAt|date('d/m/Y') : '—' }}
                        </span>
                        <small class="text-muted">
                          {{ p.paidAt ? p.paidAt|date('H:i') : '' }}
                        </small>
                      </div>
                    </td>
                    <td>
                      <div class="d-flex align-items-center">
                        <div class="avatar-xs flex-shrink-0 me-2">
                          <span class="avatar-title rounded-circle bg-primary-subtle text-primary">
                            {{ p.rdv.client ? p.rdv.client|slice(0,1)|upper : '?' }}
                          </span>
                        </div>
                        <div class="flex-grow-1">
                          <h6 class="mb-0">{{ p.rdv.client ?? '—' }}</h6>
                        </div>
                      </div>
                    </td>
                    <td>
                      <span class="badge bg-secondary-subtle text-secondary">
                        {{ p.rdv.prestation ?? '—' }}
                      </span>
                    </td>
                    <td>
                      {% set methodeBadge = {
                        'ESPECES': 'success',
                        'MOBILE': 'primary',
                        'CARTE': 'info',
                        'CHEQUE': 'warning'
                      } %}
                      {% set badgeClass = methodeBadge[p.methode] ?? 'secondary' %}
                      <span class="badge bg-{{ badgeClass }}-subtle text-{{ badgeClass }}">
                        {{ p.methode }}
                      </span>
                    </td>
                    <td>
                      {% if p.receiptNumber %}
                        <span class="badge bg-primary-subtle text-primary">
                          {{ p.receiptNumber }}
                        </span>
                      {% else %}
                        <span class="text-muted">—</span>
                      {% endif %}
                    </td>
                    <td class="text-end">
                      <h6 class="mb-0 text-success fw-semibold">
                        {{ p.amount|number_format(0,',',' ') }}
                        <small class="text-muted fw-normal">MRU</small>
                      </h6>
                    </td>
                  </tr>
                {% else %}
                  <tr>
                    <td colspan="7" class="text-center py-5">
                      <div class="text-muted">
                        <i class="ri-inbox-line fs-1 d-block mb-2"></i>
                        <h5 class="text-muted">Aucun paiement</h5>
                        <p class="mb-0">Il n'y a pas de paiement enregistré pour cette année.</p>
                      </div>
                    </td>
                  </tr>
                {% endfor %}
              </tbody>
              {% if pagination.getTotalItemCount > 0 %}
                <tfoot class="table-light">
                  <tr class="table-active">
                    <th colspan="6" class="text-end fw-bold">
                      <i class="ri-money-dollar-circle-line me-1"></i>
                      Total Année
                    </th>
                    <th class="text-end">
                      <h4 class="mb-0 text-success">
                        {{ total|number_format(0,',',' ') }} MRU
                      </h4>
                    </th>
                  </tr>
                </tfoot>
              {% endif %}
            </table>
          </div>
        </div>
        {% if pagination.getTotalItemCount > 10 %}
          <div class="card-footer border-top-dashed">
            <div class="d-flex justify-content-between align-items-center">
              <div class="text-muted">
                Affichage de {{ pagination.count }} sur {{ pagination.getTotalItemCount }} paiements
              </div>
              <div>
                {{ knp_pagination_render(pagination) }}
              </div>
            </div>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
{% endblock %}

{% block javascripts %}
  <script src="https://cdn.jsdelivr.net/npm/apexcharts@3.45.1/dist/apexcharts.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const labels = {{ labels|json_encode|raw }};
      const values = {{ values|json_encode|raw }};

      const getChartColorsArray = (colors) => {
        colors = JSON.parse(colors);
        return colors.map(function(value) {
          var newValue = value.replace(" ", "");
          if (newValue.indexOf(",") === -1) {
            var color = getComputedStyle(document.documentElement).getPropertyValue(newValue);
            if (color.indexOf("#") !== -1) color = color.replace(" ", "");
            if (color) return color;
            else return newValue;
          }
        });
      };

      try {
        const chartColors = '["--vz-success", "--vz-info"]';
        const chart = new ApexCharts(document.querySelector('#chart-entries-year'), {
          chart: { 
            type: 'bar',
            height: 380,
            toolbar: { show: true }
          },
          plotOptions: { 
            bar: { 
              borderRadius: 8,
              columnWidth: '60%',
              dataLabels: {
                position: 'top'
              }
            } 
          },
          dataLabels: { 
            enabled: true,
            formatter: function(val) {
              return Intl.NumberFormat('fr-FR', {notation: 'compact'}).format(val);
            },
            offsetY: -20,
            style: {
              fontSize: '11px',
              colors: ["#304758"]
            }
          },
          series: [{ 
            name: 'Entrées (MRU)',
            data: values 
          }],
          xaxis: { 
            categories: labels,
            axisBorder: { show: false },
            labels: {
              style: {
                fontSize: '12px'
              }
            }
          },
          yaxis: {
            labels: {
              formatter: function(value) {
                return Intl.NumberFormat('fr-FR').format(value);
              }
            }
          },
          colors: getChartColorsArray(chartColors),
          grid: {
            borderColor: '#f1f1f1'
          },
          tooltip: { 
            y: {
              formatter: function(value) {
                return Intl.NumberFormat('fr-FR').format(value) + ' MRU';
              }
            }
          }
        });
        
        chart.render();
      } catch (e) {
        console.error('❌ Erreur chart:', e);
      }

      // Checkbox tout sélectionner
      const checkAll = document.getElementById('checkAll');
      if (checkAll) {
        checkAll.addEventListener('change', function() {
          document.querySelectorAll('tbody input[type="checkbox"]').forEach(cb => {
            cb.checked = this.checked;
          });
        });
      }
    });
  </script>
{% endblock %}