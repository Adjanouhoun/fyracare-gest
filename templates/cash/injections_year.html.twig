{% extends 'layouts/main.html.twig' %}
{% block title %}Injections — Année{% endblock %}

{% block page_header %}
  <div class="d-flex align-items-center justify-content-between">
    <div>
      <h4 class="fs-16 mb-1">Injections — {{ year }}</h4>
      <p class="text-muted mb-0">
        Période : {{ from|date('d/m/Y') }} → {{ to|date('d/m/Y') }} — Total :
        <strong>{{ total|number_format(0,',',' ') }} MRU</strong>
      </p>
    </div>
    <div class="d-flex gap-2">
      <a class="btn btn-ghost-secondary" href="{{ path('cash_index') }}">
        <i class="ri-arrow-left-line"></i> Retour caisse
      </a>
    </div>
  </div>
{% endblock %}

{% block body %}
  <form method="get" class="card mb-3">
    <div class="card-body row g-2 align-items-end">
      <div class="col-md-4">
        <label class="form-label">Année</label>
        <select name="year" class="form-select">
          {% for yy in years %}
            <option value="{{ yy }}" {% if yy == year %}selected{% endif %}>{{ yy }}</option>
          {% endfor %}
        </select>
      </div>
      <div class="col-md-2">
        <button class="btn btn-primary w-100"><i class="ri-filter-3-line"></i> Filtrer</button>
      </div>
    </div>
  </form>

  <div class="row g-3">
    <div class="col-lg-6">
      <div class="card">
        <div class="card-header"><h5 class="card-title mb-0">Évolution des injections (mois)</h5></div>
        <div class="card-body">
          <div id="chart-inj-year"
               data-labels='{{ labels|json_encode|e('html_attr') }}'
               data-values='{{ values|json_encode|e('html_attr') }}'
               style="height:300px"></div>
        </div>
      </div>
    </div>

    <div class="col-lg-12">
      <div class="card">
        <div class="card-header"><h5 class="card-title mb-0">Détails</h5></div>
        <div class="card-body">
          <div class="table-responsive table-card">
            <table class="table table-hover align-middle mb-0">
              <thead class="table-light">
                <tr>
                  <th>Date</th>
                  <th>Source</th>
                  <th>Notes</th>
                  <th class="text-end">Montant (MRU)</th>
                </tr>
              </thead>
              <tbody>
                {% for e in pagination %}
                  <tr>
                    <td>{{ e.createdAt|date('d/m/Y H:i') }}</td>
                    <td>{{ e.source ?: '—' }}</td>
                    <td>{{ e.notes ?: '—' }}</td>
                    <td class="text-end">{{ e.amount|number_format(0,',',' ') }}</td>
                  </tr>
                {% else %}
                  <tr><td colspan="4" class="text-center text-muted">Aucune injection.</td></tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
          <div class="mt-3">{{ knp_pagination_render(pagination) }}</div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
  <script>
    (function(){
      const el = document.getElementById('chart-inj-year');
      const labels = JSON.parse(el.dataset.labels || '[]');
      const values = JSON.parse(el.dataset.values || '[]');
      if (!values.length) {
        el.innerHTML = '<div class="text-muted">Aucune donnée pour cette année.</div>';
        return;
      }
      new ApexCharts(el, {
        chart: { type: 'line', height: 300, toolbar: { show:false } },
        series: [{ name: 'Injections', data: values }],
        xaxis: { categories: labels },
        yaxis: { labels: { formatter: v => Intl.NumberFormat('fr-FR').format(v) } },
      }).render();
    })();
  </script>
{% endblock %}
