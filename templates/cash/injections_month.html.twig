{% extends 'layouts/main.html.twig' %}
{% block title %}Injections du mois{% endblock %}

{% block stylesheets %}
<style>
.injection-header-card {
    background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    border: none;
    color: white;
}
.injection-row {
    transition: all 0.2s ease;
}
.injection-row:hover {
    background-color: #fff9e6;
    transform: translateX(3px);
}
</style>
{% endblock %}

{% block page_header %}
  <div class="row">
    <div class="col-12">
      <div class="page-title-box d-sm-flex align-items-center justify-content-between">
        <div>
          <h4 class="mb-sm-0">
            <i class="ri-download-2-line text-warning me-2"></i>
            Injections de Fonds (Mois)
          </h4>
          <p class="text-muted mb-0">Suivi des apports de liquidités mensuels</p>
        </div>
        <div class="page-title-right">
          <ol class="breadcrumb m-0">
            <li class="breadcrumb-item"><a href="{{ path('cash_index') }}">Caisse</a></li>
            <li class="breadcrumb-item active">Injections Mois</li>
          </ol>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

{% block body %}
  {# Header Card #}
  <div class="row">
    <div class="col-12">
      <div class="card injection-header-card shadow-lg mb-4">
        <div class="card-body p-4">
          <div class="row align-items-center">
            <div class="col-lg-6">
              <div class="d-flex align-items-center">
                <div class="avatar-lg me-3">
                  <span class="avatar-title bg-white bg-opacity-25 rounded fs-1">
                    <i class="ri-funds-line"></i>
                  </span>
                </div>
                <div>
                  <h3 class="text-white mb-1">{{ months[m] }} {{ y }}</h3>
                  <p class="text-white-50 mb-0">
                    <i class="ri-calendar-line me-1"></i>
                    {{ from|date('d/m/Y') }} → {{ to|date('d/m/Y') }}
                  </p>
                </div>
              </div>
            </div>
            <div class="col-lg-6 mt-3 mt-lg-0">
              <div class="text-lg-end">
                <h2 class="text-white fw-bold mb-1">
                  {{ total|number_format(0,',',' ') }} MRU
                </h2>
                <p class="text-white-50 mb-0">Total injections du mois</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  {# Filtres #}
  <div class="row">
    <div class="col-12">
      <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-soft-warning border-bottom-dashed">
          <h5 class="card-title mb-0">
            <i class="ri-filter-3-line me-2"></i>
            Filtrer par période
          </h5>
        </div>
        <div class="card-body">
          <form method="get" class="row g-3 align-items-end">
            <div class="col-md-5">
              <label class="form-label fw-medium">
                <i class="ri-calendar-event-line me-1 text-warning"></i>
                Mois
              </label>
              <select name="m" class="form-select">
                {% for k,lab in months %}
                  <option value="{{ k }}" {% if k == m %}selected{% endif %}>{{ lab }}</option>
                {% endfor %}
              </select>
            </div>
            <div class="col-md-4">
              <label class="form-label fw-medium">
                <i class="ri-calendar-line me-1 text-warning"></i>
                Année
              </label>
              <select name="y" class="form-select">
                {% for yy in years %}
                  <option value="{{ yy }}" {% if yy == y %}selected{% endif %}>{{ yy }}</option>
                {% endfor %}
              </select>
            </div>
            <div class="col-md-3">
              <button type="submit" class="btn btn-warning w-100">
                <i class="ri-search-line me-1"></i>
                Analyser
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  {# Graphique + Synthèse #}
  <div class="row">
    <div class="col-lg-8">
      <div class="card card-height-100">
        <div class="card-header border-bottom-dashed">
          <div class="d-flex align-items-center">
            <h5 class="card-title flex-grow-1 mb-0">
              <i class="ri-line-chart-line text-warning me-2"></i>
              Évolution Journalière
            </h5>
            <div class="flex-shrink-0">
              <span class="badge bg-warning-subtle text-warning">
                {{ labels|length }} jours
              </span>
            </div>
          </div>
        </div>
        <div class="card-body">
          <div id="chart-inj-month" style="min-height: 350px;" class="apex-charts" dir="ltr"></div>
        </div>
      </div>
    </div>

    <div class="col-lg-4">
      <div class="card card-height-100">
        <div class="card-header border-bottom-dashed bg-soft-warning">
          <h5 class="card-title mb-0">
            <i class="ri-pie-chart-2-line me-2"></i>
            Synthèse du Mois
          </h5>
        </div>
        <div class="card-body">
          {# Total #}
          <div class="mb-4 p-3 bg-warning-subtle rounded">
            <div class="d-flex align-items-center justify-content-between">
              <div>
                <p class="text-muted mb-1 fs-13">Total Mois</p>
                <h3 class="mb-0 text-warning fw-bold">
                  {{ total|number_format(0,',',' ') }}
                  <small class="fs-14">MRU</small>
                </h3>
              </div>
              <div class="avatar-sm">
                <span class="avatar-title bg-warning rounded-circle fs-2">
                  <i class="ri-funds-line"></i>
                </span>
              </div>
            </div>
          </div>

          {# Nombre d'injections #}
          <div class="mb-4">
            <div class="d-flex align-items-center justify-content-between mb-2">
              <span class="text-muted">
                <i class="ri-arrow-down-circle-line me-1"></i>
                Nombre d'injections
              </span>
              <strong>{{ pagination.getTotalItemCount }}</strong>
            </div>
            <div class="progress progress-sm">
              <div class="progress-bar bg-warning" role="progressbar" style="width: 100%"></div>
            </div>
          </div>

          {# Montant moyen #}
          <div class="mb-4">
            <div class="d-flex align-items-center justify-content-between mb-2">
              <span class="text-muted">
                <i class="ri-calculator-line me-1"></i>
                Montant moyen
              </span>
              {% set avg = pagination.getTotalItemCount > 0 ? (total / pagination.getTotalItemCount) : 0 %}
              <strong>{{ avg|round(0)|number_format(0,',',' ') }} MRU</strong>
            </div>
          </div>

          {# Plus grosse injection #}
          {% set maxValue = 0 %}
          {% set maxIndex = 0 %}
          {% for i, v in values %}
            {% if v > maxValue %}
              {% set maxValue = v %}
              {% set maxIndex = i %}
            {% endif %}
          {% endfor %}
          <div class="mb-3 p-3 bg-info-subtle rounded">
            <div class="d-flex align-items-center justify-content-between">
              <div>
                <p class="text-muted mb-1 fs-13">
                  <i class="ri-trophy-line text-info me-1"></i>
                  Plus grosse injection
                </p>
                <h5 class="mb-0 text-info">
                  {{ labels[maxIndex] ?? '-' }}
                </h5>
              </div>
              <div class="text-end">
                <h5 class="mb-0 text-info fw-bold">
                  {{ maxValue|number_format(0,',',' ') }}
                </h5>
                <small class="text-muted">MRU</small>
              </div>
            </div>
          </div>

          {# Actions #}
          <div class="d-grid gap-2 mt-4">
            <a href="{{ path('cash_index') }}" class="btn btn-soft-secondary">
              <i class="ri-arrow-left-line me-1"></i>
              Retour caisse
            </a>
            <a href="{{ path('cash_deposit') }}" class="btn btn-warning">
              <i class="ri-add-line me-1"></i>
              Nouvelle injection
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  {# Tableau Détails #}
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header border-bottom-dashed">
          <div class="d-flex align-items-center justify-content-between">
            <h5 class="card-title mb-0">
              <i class="ri-file-list-3-line text-info me-2"></i>
              Détails des Injections
            </h5>
            <div class="d-flex gap-2">
              <span class="badge bg-warning-subtle text-warning fs-12">
                {{ pagination.getTotalItemCount }} injection(s)
              </span>
              <button class="btn btn-soft-primary btn-sm" onclick="window.print()">
                <i class="ri-printer-line me-1"></i>
                Imprimer
              </button>
            </div>
          </div>
        </div>
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-hover align-middle table-nowrap mb-0">
              <thead class="table-light">
                <tr>
                  <th style="width: 50px;">
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" id="checkAll">
                    </div>
                  </th>
                  <th>
                    <i class="ri-calendar-event-line me-1"></i>
                    Date
                  </th>
                  <th>
                    <i class="ri-arrow-down-circle-line me-1"></i>
                    Source
                  </th>
                  <th>
                    <i class="ri-file-text-line me-1"></i>
                    Notes
                  </th>
                  <th class="text-end">
                    <i class="ri-money-dollar-circle-line me-1"></i>
                    Montant
                  </th>
                  <th class="text-end">Actions</th>
                </tr>
              </thead>
              <tbody>
                {% for e in pagination %}
                  <tr class="injection-row">
                    <td>
                      <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="{{ e.id }}">
                      </div>
                    </td>
                    <td>
                      <div class="d-flex flex-column">
                        <span class="fw-medium text-dark">
                          {{ e.createdAt|date('d/m/Y') }}
                        </span>
                        <small class="text-muted">
                          {{ e.createdAt|date('H:i') }}
                        </small>
                      </div>
                    </td>
                    <td>
                      <span class="badge bg-info-subtle text-info">
                        {{ e.source ?: 'Injection manuelle' }}
                      </span>
                    </td>
                    <td>
                      <span class="text-muted">{{ e.notes ?: '—' }}</span>
                    </td>
                    <td class="text-end">
                      <h6 class="mb-0 text-warning fw-semibold">
                        +{{ e.amount|number_format(0,',',' ') }}
                        <small class="text-muted fw-normal">MRU</small>
                      </h6>
                    </td>
                    <td class="text-end">
                      <a href="{{ path('cash_deposit_edit', {id: e.id}) }}" class="btn btn-sm btn-soft-primary" title="Modifier">
                        <i class="ri-pencil-line"></i>
                      </a>
                      <form method="post" action="{{ path('cash_deposit_delete', {id: e.id}) }}" style="display:inline" onsubmit="return confirm('Supprimer cette injection ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete_deposit_' ~ e.id) }}">
                        <button type="submit" class="btn btn-sm btn-soft-danger" title="Supprimer">
                          <i class="ri-delete-bin-line"></i>
                        </button>
                      </form>
                    </td>
                  </tr>
                {% else %}
                  <tr>
                    <td colspan="6" class="text-center py-5">
                      <div class="text-muted">
                        <i class="ri-inbox-line fs-1 d-block mb-2"></i>
                        <h5 class="text-muted">Aucune injection</h5>
                        <p class="mb-0">Aucune injection de fonds pour ce mois.</p>
                      </div>
                    </td>
                  </tr>
                {% endfor %}
              </tbody>
              {% if pagination.getTotalItemCount > 0 %}
                <tfoot class="table-light">
                  <tr class="table-active">
                    <th colspan="4" class="text-end fw-bold">
                      <i class="ri-calculator-line me-1"></i>
                      Total Mois
                    </th>
                    <th class="text-end">
                      <h4 class="mb-0 text-warning">
                        {{ total|number_format(0,',',' ') }} MRU
                      </h4>
                    </th>
                    <th></th>
                  </tr>
                </tfoot>
              {% endif %}
            </table>
          </div>
        </div>
        {% if pagination.getTotalItemCount > 10 %}
          <div class="card-footer border-top-dashed">
            <div class="d-flex justify-content-between align-items-center">
              <div class="text-muted">
                Affichage de {{ pagination.count }} sur {{ pagination.getTotalItemCount }} injections
              </div>
              <div>
                {{ knp_pagination_render(pagination) }}
              </div>
            </div>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
{% endblock %}

{% block javascripts %}
  <script src="https://cdn.jsdelivr.net/npm/apexcharts@3.45.1/dist/apexcharts.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const labels = {{ labels|json_encode|raw }};
      const values = {{ values|json_encode|raw }};
      const total = {{ total }};

      const getChartColorsArray = (colors) => {
        colors = JSON.parse(colors);
        return colors.map(function(value) {
          var newValue = value.replace(" ", "");
          if (newValue.indexOf(",") === -1) {
            var color = getComputedStyle(document.documentElement).getPropertyValue(newValue);
            if (color.indexOf("#") !== -1) color = color.replace(" ", "");
            if (color) return color;
            else return newValue;
          }
        });
      };

      try {
        if (values && values.length > 0) {
          const chartColors = '["--vz-warning", "--vz-info"]';
          const chart = new ApexCharts(document.querySelector('#chart-inj-month'), {
            chart: { 
              type: 'area',
              height: 350,
              toolbar: { show: true }
            },
            dataLabels: { enabled: false },
            stroke: { 
              curve: 'smooth',
              width: 3
            },
            series: [{
              name: 'Injections',
              data: values
            }],
            fill: {
              type: 'gradient',
              gradient: {
                shadeIntensity: 1,
                opacityFrom: 0.5,
                opacityTo: 0.1,
                stops: [0, 90, 100]
              }
            },
            xaxis: {
              categories: labels,
              axisBorder: { show: false },
              labels: {
                rotate: -45
              }
            },
            yaxis: {
              labels: {
                formatter: function(value) {
                  return Intl.NumberFormat('fr-FR').format(value);
                }
              }
            },
            colors: getChartColorsArray(chartColors),
            grid: {
              borderColor: '#f1f1f1'
            },
            tooltip: {
              y: {
                formatter: function(value) {
                  return Intl.NumberFormat('fr-FR').format(value) + ' MRU';
                }
              }
            },
            // Annotation moyenne
            annotations: {
              yaxis: [{
                y: total / labels.length,
                borderColor: '#FEB019',
                strokeDashArray: 5,
                label: {
                  borderColor: '#FEB019',
                  style: {
                    color: '#fff',
                    background: '#FEB019',
                  },
                  text: 'Moyenne'
                }
              }]
            }
          });
          chart.render();
        } else {
          document.querySelector('#chart-inj-month').innerHTML = 
            '<div class="text-center text-muted py-5"><i class="ri-line-chart-line fs-1"></i><p>Aucune injection pour ce mois</p></div>';
        }
      } catch (e) {
        console.error('❌ Erreur chart injections mois:', e);
      }

      // Checkbox
      const checkAll = document.getElementById('checkAll');
      if (checkAll) {
        checkAll.addEventListener('change', function() {
          document.querySelectorAll('tbody input[type="checkbox"]').forEach(cb => {
            cb.checked = this.checked;
          });
        });
      }
    });
  </script>
{% endblock %}