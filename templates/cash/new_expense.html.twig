{% extends 'layouts/main.html.twig' %}
{% block title %}Nouvelle dépense
{% endblock %}

{% block page_header %}
	<h4 class="fs-16 mb-1">Nouvelle dépense</h4>
	<p class="text-muted mb-0">Solde disponible aujourd’hui :
		<strong>{{ availableToday|number_format(0,',',' ') }}
			MRU</strong>
	</p>
{% endblock %}

{% block body %}
	{% include 'partials/flashes.html.twig' %}

	<div class="card">
		<div class="card-body">
			{{ form_start(form) }}
			<div class="row g-3">
				<div class="col-md-4">
					<label class="form-label">Montant (MRU)</label>
					{{ form_widget(form.amount, {attr:{class:'form-control', min:1, max: availableToday}}) }}
					{{ form_errors(form.amount) }}
					<small class="text-muted">Plafond:
						{{ availableToday|number_format(0,',',' ') }}
						MRU</small>
				</div>
        <div class="col-md-4">
					<label class="form-label">Categorie</label>
					{{ form_widget(form.category, {attr:{class:'form-select'}}) }}
					{{ form_errors(form.category) }}
				</div>
			</div>
			<div class="col-md-8">
				<label class="form-label">Motif / Notes</label>
				{{ form_widget(form.notes, {attr:{class:'form-control', rows:3}}) }}
				{{ form_errors(form.notes) }}
			</div>
		</div>
		<div class="mt-3 d-flex gap-2">
			<button class="btn btn-danger">
				<i class="ri-check-line"></i>
				Enregistrer</button>
			<a href="{{ path('cash_index') }}" class="btn btn-ghost-secondary">Annuler</a>
		</div>
		{{ form_end(form) }}
	</div>
</div>{% endblock %}
