{% extends 'layouts/main.html.twig' %}
{% block title %}Détail clôture{% endblock %}

{% block page_header %}
  <h4 class="fs-16 mb-1">Clôture du {{ closure.closedAt|date('d/m/Y H:i') }}</h4>
{% endblock %}

{% block body %}
  <div class="row g-3">
    <div class="col-xl-4">
      <div class="card card-animate"><div class="card-body">
        <div class="text-muted">Entrées</div>
        <div class="fs-22 fw-semibold">{{ closure.totalIn|number_format(0,',',' ') }} MRU</div>
      </div></div>
      <div class="card card-animate"><div class="card-body">
        <div class="text-muted">Sorties</div>
        <div class="fs-22 fw-semibold">{{ closure.totalOut|number_format(0,',',' ') }} MRU</div>
      </div></div>
      <div class="card card-animate"><div class="card-body">
        <div class="text-muted">Solde</div>
        <div class="fs-22 fw-semibold">{{ closure.balance|number_format(0,',',' ') }} MRU</div>
      </div></div>
    </div>
    <div class="col-xl-8">
      <div class="card"><div class="card-body">
        <h6 class="text-muted mb-1">Notes</h6>
        <div>{{ closure.notes ?: '—' }}</div>
      </div></div>
    </div>
  </div>
{% endblock %}
