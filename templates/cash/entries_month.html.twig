{% extends 'layouts/main.html.twig' %}
{% block title %}Entrées du mois{% endblock %}

{% block stylesheets %}
<style>
.month-header-card {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border: none;
    color: white;
}
.stat-box {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border-radius: 10px;
    padding: 20px;
    transition: all 0.3s ease;
}
.stat-box:hover {
    background: rgba(255, 255, 255, 0.15);
    transform: translateY(-3px);
}
.payment-row {
    transition: all 0.2s ease;
}
.payment-row:hover {
    background-color: #f8f9fa;
    transform: translateX(5px);
}
.receipt-badge {
    cursor: pointer;
    transition: all 0.2s ease;
}
.receipt-badge:hover {
    transform: scale(1.05);
}
</style>
{% endblock %}

{% block page_header %}
  <div class="row">
    <div class="col-12">
      <div class="page-title-box d-sm-flex align-items-center justify-content-between">
        <div>
          <h4 class="mb-sm-0">
            <i class="ri-arrow-down-circle-line text-success me-2"></i>
            Entrées (Paiements)
          </h4>
          <p class="text-muted mb-0">Suivi détaillé des encaissements mensuels</p>
        </div>
        <div class="page-title-right">
          <ol class="breadcrumb m-0">
            <li class="breadcrumb-item"><a href="{{ path('cash_index') }}">Caisse</a></li>
            <li class="breadcrumb-item active">Entrées Mois</li>
          </ol>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

{% block body %}
  {# Header Card avec Info Mois #}
  <div class="row">
    <div class="col-12">
      <div class="card month-header-card shadow-lg mb-4">
        <div class="card-body p-4">
          <div class="row align-items-center">
            <div class="col-lg-6">
              <div class="d-flex align-items-center">
                <div class="avatar-lg me-3">
                  <span class="avatar-title bg-white bg-opacity-25 rounded fs-1">
                    <i class="ri-calendar-check-line"></i>
                  </span>
                </div>
                <div>
                  <h3 class="text-white mb-1">{{ months[m] }} {{ y }}</h3>
                  <p class="text-white-50 mb-0">
                    <i class="ri-calendar-line me-1"></i>
                    {{ from|date('d/m/Y') }} → {{ to|date('d/m/Y') }}
                  </p>
                </div>
              </div>
            </div>
            <div class="col-lg-6 mt-3 mt-lg-0">
              <div class="text-lg-end">
                <h2 class="text-white fw-bold mb-1">
                  {{ total|number_format(0,',',' ') }} MRU
                </h2>
                <p class="text-white-50 mb-0">Total des entrées</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  {# Filtre #}
  <div class="row">
    <div class="col-12">
      <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-soft-primary border-bottom-dashed">
          <h5 class="card-title mb-0">
            <i class="ri-filter-3-line me-2"></i>
            Filtrer par période
          </h5>
        </div>
        <div class="card-body">
          <form method="get" class="row g-3 align-items-end">
            <div class="col-md-5">
              <label class="form-label fw-medium">
                <i class="ri-calendar-event-line me-1 text-primary"></i>
                Mois
              </label>
              <select name="m" class="form-select">
                {% for k,lab in months %}
                  <option value="{{ k }}" {% if k == m %}selected{% endif %}>{{ lab }}</option>
                {% endfor %}
              </select>
            </div>
            <div class="col-md-4">
              <label class="form-label fw-medium">
                <i class="ri-calendar-line me-1 text-primary"></i>
                Année
              </label>
              <select name="y" class="form-select">
                {% for yy in years %}
                  <option value="{{ yy }}" {% if yy == y %}selected{% endif %}>{{ yy }}</option>
                {% endfor %}
              </select>
            </div>
            <div class="col-md-3">
              <button type="submit" class="btn btn-primary w-100">
                <i class="ri-search-line me-1"></i>
                Analyser
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  {# Graphique + Synthèse #}
  <div class="row">
    <div class="col-lg-8">
      <div class="card card-height-100">
        <div class="card-header border-bottom-dashed">
          <div class="d-flex align-items-center">
            <h5 class="card-title flex-grow-1 mb-0">
              <i class="ri-line-chart-line text-primary me-2"></i>
              Évolution Journalière
            </h5>
            <div class="flex-shrink-0">
              <span class="badge bg-primary-subtle text-primary">
                {{ labels|length }} jours
              </span>
            </div>
          </div>
        </div>
        <div class="card-body">
          <div id="chart-entries-month" style="min-height: 350px;" class="apex-charts" dir="ltr"></div>
        </div>
      </div>
    </div>

    <div class="col-lg-4">
      <div class="card card-height-100">
        <div class="card-header border-bottom-dashed bg-soft-success">
          <h5 class="card-title mb-0">
            <i class="ri-pie-chart-2-line me-2"></i>
            Synthèse du Mois
          </h5>
        </div>
        <div class="card-body">
          {# Total #}
          <div class="mb-4 p-3 bg-success-subtle rounded">
            <div class="d-flex align-items-center justify-content-between">
              <div>
                <p class="text-muted mb-1 fs-13">Total Mois</p>
                <h3 class="mb-0 text-success fw-bold">
                  {{ total|number_format(0,',',' ') }}
                  <small class="fs-14">MRU</small>
                </h3>
              </div>
              <div class="avatar-sm">
                <span class="avatar-title bg-success rounded-circle fs-2">
                  <i class="ri-money-dollar-circle-line"></i>
                </span>
              </div>
            </div>
          </div>

          {# Jours avec entrée #}
          <div class="mb-4">
            <div class="d-flex align-items-center justify-content-between mb-2">
              <span class="text-muted">
                <i class="ri-calendar-check-line me-1"></i>
                Jours actifs
              </span>
              <strong>{{ values|filter(v => v>0)|length }}/{{ labels|length }}</strong>
            </div>
            {% set activeDays = values|filter(v => v>0)|length %}
            {% set percentActive = labels|length > 0 ? (activeDays / labels|length * 100) : 0 %}
            <div class="progress progress-sm">
              <div class="progress-bar bg-info" role="progressbar" 
                   style="width: {{ percentActive|round(0) }}%"
                   aria-valuenow="{{ percentActive|round(0) }}" 
                   aria-valuemin="0" 
                   aria-valuemax="100">
              </div>
            </div>
            <small class="text-muted">{{ percentActive|round(1) }}% des jours</small>
          </div>

          {# Moyenne par jour #}
          <div class="mb-4">
            <div class="d-flex align-items-center justify-content-between mb-2">
              <span class="text-muted">
                <i class="ri-calculator-line me-1"></i>
                Moyenne / jour
              </span>
              {% set avg = (labels|length > 0) ? (total / labels|length) : 0 %}
              <strong>{{ avg|round(0,'floor')|number_format(0,',',' ') }} MRU</strong>
            </div>
            <div class="progress progress-sm">
              {% set maxValue = 0 %}
              {% for v in values %}
                {% if v > maxValue %}
                  {% set maxValue = v %}
                {% endif %}
              {% endfor %}
              {% set percentAvg = maxValue > 0 ? (avg / maxValue * 100) : 0 %}
              <div class="progress-bar bg-warning" role="progressbar" 
                   style="width: {{ percentAvg|round(0) }}%">
              </div>
            </div>
            <small class="text-muted">Basé sur {{ labels|length }} jours</small>
          </div>

          {# Meilleur jour #}
          {% set maxValue = 0 %}
          {% set maxIndex = 0 %}
          {% for i, v in values %}
            {% if v > maxValue %}
              {% set maxValue = v %}
              {% set maxIndex = i %}
            {% endif %}
          {% endfor %}
          <div class="mb-3 p-3 bg-warning-subtle rounded">
            <div class="d-flex align-items-center justify-content-between">
              <div>
                <p class="text-muted mb-1 fs-13">
                  <i class="ri-trophy-line text-warning me-1"></i>
                  Meilleur jour
                </p>
                <h5 class="mb-0 text-warning">
                  {{ labels[maxIndex] ?? '-' }}
                </h5>
              </div>
              <div class="text-end">
                <h5 class="mb-0 text-warning fw-bold">
                  {{ maxValue|number_format(0,',',' ') }}
                </h5>
                <small class="text-muted">MRU</small>
              </div>
            </div>
          </div>

          {# Actions #}
          <div class="d-grid gap-2 mt-4">
            <a href="{{ path('cash_index') }}" class="btn btn-soft-secondary">
              <i class="ri-arrow-left-line me-1"></i>
              Retour caisse
            </a>
            <button class="btn btn-soft-primary" onclick="window.print()">
              <i class="ri-printer-line me-1"></i>
              Imprimer
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>

  {# Tableau Détails #}
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header border-bottom-dashed">
          <div class="d-flex align-items-center">
            <h5 class="card-title flex-grow-1 mb-0">
              <i class="ri-file-list-3-line text-info me-2"></i>
              Détails des Paiements
            </h5>
            <div class="flex-shrink-0">
              <span class="badge bg-info-subtle text-info fs-12">
                {{ pagination.getTotalItemCount }} paiement(s)
              </span>
            </div>
          </div>
        </div>
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-hover align-middle table-nowrap mb-0">
              <thead class="table-light">
                <tr>
                  <th scope="col" style="width: 50px;">
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" id="checkAll">
                    </div>
                  </th>
                  <th scope="col">
                    <i class="ri-calendar-event-line me-1"></i>
                    Date
                  </th>
                  <th scope="col">
                    <i class="ri-user-line me-1"></i>
                    Client
                  </th>
                  <th scope="col">
                    <i class="ri-service-line me-1"></i>
                    Prestation
                  </th>
                  <th scope="col">
                    <i class="ri-bank-card-line me-1"></i>
                    Méthode
                  </th>
                  <th scope="col">
                    <i class="ri-file-text-line me-1"></i>
                    Reçu
                  </th>
                  <th scope="col" class="text-end">
                    <i class="ri-money-dollar-circle-line me-1"></i>
                    Montant
                  </th>
                </tr>
              </thead>
              <tbody>
                {% for p in pagination %}
                  <tr class="payment-row">
                    <td>
                      <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="{{ p.id }}">
                      </div>
                    </td>
                    <td>
                      <div class="d-flex flex-column">
                        <span class="fw-medium text-dark">
                          {{ p.paidAt ? p.paidAt|date('d/m/Y') : '—' }}
                        </span>
                        <small class="text-muted">
                          {{ p.paidAt ? p.paidAt|date('H:i') : '' }}
                        </small>
                      </div>
                    </td>
                    <td>
                      <div class="d-flex align-items-center">
                        <div class="avatar-xs flex-shrink-0 me-2">
                          <span class="avatar-title rounded-circle bg-primary-subtle text-primary">
                            {{ p.rdv.client ? p.rdv.client|slice(0,1)|upper : '?' }}
                          </span>
                        </div>
                        <div class="flex-grow-1">
                          <h6 class="mb-0">{{ p.rdv.client ?? '—' }}</h6>
                        </div>
                      </div>
                    </td>
                    <td>
                      <span class="badge bg-secondary-subtle text-secondary">
                        {{ p.rdv.prestation ?? '—' }}
                      </span>
                    </td>
                    <td>
                      {% set methodeBadge = {
                        'ESPECES': 'success',
                        'MOBILE': 'primary',
                        'CARTE': 'info',
                        'CHEQUE': 'warning'
                      } %}
                      {% set badgeClass = methodeBadge[p.methode] ?? 'secondary' %}
                      <span class="badge bg-{{ badgeClass }}-subtle text-{{ badgeClass }}">
                        {% if p.methode == 'ESPECES' %}
                          <i class="ri-money-dollar-circle-line me-1"></i>
                        {% elseif p.methode == 'MOBILE' %}
                          <i class="ri-smartphone-line me-1"></i>
                        {% elseif p.methode == 'CARTE' %}
                          <i class="ri-bank-card-line me-1"></i>
                        {% elseif p.methode == 'CHEQUE' %}
                          <i class="ri-file-text-line me-1"></i>
                        {% endif %}
                        {{ p.methode }}
                      </span>
                    </td>
                    <td>
                      {% if p.receiptNumber %}
                        <span class="badge bg-primary-subtle text-primary receipt-badge" 
                              data-bs-toggle="tooltip" 
                              title="Cliquer pour copier">
                          <i class="ri-file-text-line me-1"></i>
                          {{ p.receiptNumber }}
                        </span>
                      {% else %}
                        <span class="text-muted">—</span>
                      {% endif %}
                    </td>
                    <td class="text-end">
                      <h6 class="mb-0 text-success fw-semibold">
                        {{ p.amount|number_format(0,',',' ') }}
                        <small class="text-muted fw-normal">MRU</small>
                      </h6>
                    </td>
                  </tr>
                {% else %}
                  <tr>
                    <td colspan="7" class="text-center py-5">
                      <div class="text-muted">
                        <i class="ri-inbox-line fs-1 d-block mb-2"></i>
                        <h5 class="text-muted">Aucun paiement</h5>
                        <p class="mb-0">Il n'y a pas de paiement enregistré pour ce mois.</p>
                      </div>
                    </td>
                  </tr>
                {% endfor %}
              </tbody>
              {% if pagination.getTotalItemCount > 0 %}
                <tfoot class="table-light">
                  <tr>
                    <th colspan="6" class="text-end fw-bold">
                      <i class="ri-calculator-line me-1"></i>
                      Total Page
                    </th>
                    <th class="text-end">
                      {% set pageTotal = 0 %}
                      {% for p in pagination %}
                        {% set pageTotal = pageTotal + p.amount %}
                      {% endfor %}
                      <h5 class="mb-0 text-success">
                        {{ pageTotal|number_format(0,',',' ') }} MRU
                      </h5>
                    </th>
                  </tr>
                  <tr class="table-active">
                    <th colspan="6" class="text-end fw-bold">
                      <i class="ri-money-dollar-circle-line me-1"></i>
                      Total Mois
                    </th>
                    <th class="text-end">
                      <h4 class="mb-0 text-success">
                        {{ total|number_format(0,',',' ') }} MRU
                      </h4>
                    </th>
                  </tr>
                </tfoot>
              {% endif %}
            </table>
          </div>
        </div>
        {% if pagination.getTotalItemCount > 10 %}
          <div class="card-footer border-top-dashed">
            <div class="d-flex justify-content-between align-items-center">
              <div class="text-muted">
                Affichage de {{ pagination.count }} sur {{ pagination.getTotalItemCount }} paiements
              </div>
              <div>
                {{ knp_pagination_render(pagination) }}
              </div>
            </div>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
{% endblock %}

{% block javascripts %}
  <script src="https://cdn.jsdelivr.net/npm/apexcharts@3.45.1/dist/apexcharts.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const labels = {{ labels|json_encode|raw }};
      const values = {{ values|json_encode|raw }};
      const total = {{ total }};

      console.log('📊 Entrées mois - Données:', {
        labels: labels.length,
        values: values.length,
        total: total
      });

      // Helper function pour les couleurs Velzon
      const getChartColorsArray = (colors) => {
        colors = JSON.parse(colors);
        return colors.map(function(value) {
          var newValue = value.replace(" ", "");
          if (newValue.indexOf(",") === -1) {
            var color = getComputedStyle(document.documentElement).getPropertyValue(newValue);
            if (color.indexOf("#") !== -1) color = color.replace(" ", "");
            if (color) return color;
            else return newValue;
          }
        });
      };

      try {
        const chartColors = '["--vz-success", "--vz-primary"]';
        const chart = new ApexCharts(document.querySelector('#chart-entries-month'), {
          chart: { 
            type: 'area',
            height: 350,
            toolbar: { 
              show: true,
              tools: {
                download: true,
                selection: true,
                zoom: true,
                zoomin: true,
                zoomout: true,
                pan: true,
                reset: true
              }
            },
            animations: {
              enabled: true,
              easing: 'easeinout',
              speed: 900
            }
          },
          dataLabels: { enabled: false },
          stroke: { 
            curve: 'smooth',
            width: 3
          },
          series: [{ 
            name: 'Entrées (MRU)',
            data: values 
          }],
          fill: {
            type: 'gradient',
            gradient: {
              shadeIntensity: 1,
              opacityFrom: 0.6,
              opacityTo: 0.1,
              stops: [0, 90, 100]
            }
          },
          xaxis: { 
            categories: labels,
            axisTicks: { show: false },
            axisBorder: { show: false },
            labels: {
              rotate: -45,
              style: {
                fontSize: '11px'
              }
            },
            title: {
              text: 'Jours du mois',
              style: {
                fontWeight: 500
              }
            }
          },
          yaxis: {
            labels: {
              formatter: function(value) {
                return Intl.NumberFormat('fr-FR').format(value);
              },
              style: {
                fontSize: '12px'
              }
            },
            title: {
              text: 'Montant (MRU)',
              style: {
                fontWeight: 500
              }
            }
          },
          colors: getChartColorsArray(chartColors),
          grid: {
            borderColor: '#f1f1f1',
            strokeDashArray: 3,
            padding: {
              top: 0,
              right: 0,
              bottom: 0,
              left: 10
            }
          },
          tooltip: { 
            y: {
              formatter: function(value) {
                return Intl.NumberFormat('fr-FR').format(value) + ' MRU';
              },
              title: {
                formatter: function() {
                  return 'Entrées :';
                }
              }
            },
            theme: 'light'
          },
          markers: {
            size: 0,
            hover: {
              size: 5,
              sizeOffset: 3
            }
          },
          // Annotation pour la moyenne
          annotations: {
            yaxis: [{
              y: total / labels.length,
              borderColor: '#FEB019',
              strokeDashArray: 5,
              label: {
                borderColor: '#FEB019',
                style: {
                  color: '#fff',
                  background: '#FEB019',
                },
                text: 'Moyenne'
              }
            }]
          }
        });
        
        chart.render();
        console.log('✅ Graphique entrées mois rendu');
      } catch (e) {
        console.error('❌ Erreur chart-entries-month:', e);
        document.querySelector('#chart-entries-month').innerHTML = 
          '<div class="alert alert-danger m-3">Erreur de chargement du graphique: ' + e.message + '</div>';
      }

      // Tooltip pour les reçus
      const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]');
      const tooltipList = [...tooltipTriggerList].map(el => new bootstrap.Tooltip(el));

      // Copier le numéro de reçu au clic
      document.querySelectorAll('.receipt-badge').forEach(badge => {
        badge.addEventListener('click', function() {
          const text = this.textContent.trim();
          navigator.clipboard.writeText(text).then(() => {
            // Toast notification (si vous avez Toastify ou similaire)
            const originalText = this.innerHTML;
            this.innerHTML = '<i class="ri-check-line me-1"></i>Copié!';
            setTimeout(() => {
              this.innerHTML = originalText;
            }, 1500);
          });
        });
      });

      // Checkbox "Tout sélectionner"
      const checkAll = document.getElementById('checkAll');
      if (checkAll) {
        checkAll.addEventListener('change', function() {
          const checkboxes = document.querySelectorAll('tbody input[type="checkbox"]');
          checkboxes.forEach(cb => cb.checked = this.checked);
        });
      }
    });
  </script>
{% endblock %}