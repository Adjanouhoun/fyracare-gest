 

{% extends 'layouts/main.html.twig' %}
{% block title %}Modifier la dépense{% endblock %}

{% block page_header %}
  <h4 class="fs-16 mb-1">Modifier la dépense</h4>
  <p class="text-muted mb-0">Enregistrer une dépense (sortie).</p>
{% endblock %}

{% block body %}
  {% include 'partials/flashes.html.twig' %}
 
      <div class="card">
      <div class="card-body">
        {{ form_start(form) }}
			<div class="row g-3">
				<div class="col-md-4">
					<label class="form-label">Montant (MRU)</label>
					{{ form_widget(form.amount, {attr:{class:'form-control', min:1}}) }}
					{{ form_errors(form.amount) }}
				</div>
        <div class="col-md-4">
					<label class="form-label">Categorie</label>
					{{ form_widget(form.category, {attr:{class:'form-select'}}) }}
					{{ form_errors(form.category) }}
				</div>
			</div>
			<div class="col-md-8">
				<label class="form-label">Motif / Notes</label>
				{{ form_widget(form.notes, {attr:{class:'form-control', rows:3}}) }}
				{{ form_errors(form.notes) }}
			</div>
		</div>
		<div class="mt-3 d-flex gap-2">
			<button class="btn btn-danger">
				<i class="ri-check-line"></i>
				Enregistrer la modification</button>
			<a href="{{ path('cash_expense_show', {id: expense.id}) }}" class="btn btn-ghost-secondary">Annuler</a>
		</div>
		{{ form_end(form) }}
    </div>
  </div>
{% endblock %}
