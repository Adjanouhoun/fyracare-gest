{% extends 'layouts/main.html.twig' %}
{% block title %}Mon profil{% endblock %}

{% block page_header %}
  <div class="d-flex align-items-center justify-content-between">
    <div>
      <h4 class="fs-16 mb-1">Mon profil</h4>
      <p class="text-muted mb-0">Infos du compte</p>
    </div>
    <a href="{{ path('account_password') }}" class="btn btn-soft-primary">
      <i class="ri-shield-keyhole-line align-middle me-1"></i> Changer mon mot de passe
    </a>
  </div>
{% endblock %}

{% block body %}
  {% include 'partials/flashes.html.twig' %}
  <div class="card"><div class="card-body">
    {{ form_start(form) }}
      <div class="row g-3">
        <div class="col-md-6">{{ form_row(form.fullname) }}</div>
        <div class="col-md-6">{{ form_row(form.email) }}</div>
        <div class="col-md-6">{{ form_row(form.fonction) }}</div>
      </div>
      <div class="mt-3">
        <button class="btn btn-success"><i class="ri-check-line"></i> Enregistrer</button>
      </div>
    {{ form_end(form) }}
  </div></div>
{% endblock %}
