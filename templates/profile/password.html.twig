{% extends 'layouts/main.html.twig' %}
{% block title %}Changer le mot de passe{% endblock %}

{% block page_header %}
  <h4 class="fs-16 mb-1">Changer mon mot de passe</h4>
  <p class="text-muted mb-0">Sécurité du compte</p>
{% endblock %}

{% block body %}
  {% include 'partials/flashes.html.twig' %}
  <div class="card"><div class="card-body">
    {{ form_start(form) }}
      <div class="row g-3">
        <div class="col-md-6">{{ form_row(form.current_password) }}</div>
        <div class="col-md-6">{{ form_row(form.new_password) }}</div>
        <div class="col-md-6">{{ form_row(form.new_password_confirm) }}</div>
      </div>
      <div class="mt-3">
        <button class="btn btn-success"><i class="ri-check-line"></i> Mettre à jour</button>
        <a href="{{ path('account_profile') }}" class="btn btn-ghost-secondary">Annuler</a>
      </div>
    {{ form_end(form) }}
  </div></div>
{% endblock %}
