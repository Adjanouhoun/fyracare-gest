{% extends 'layouts/main.html.twig' %}
{% block title %}Nouvelle prestation | Velzon{% endblock %}

{% block page_header %}
<div class="row mb-3 pb-1">
  <div class="col-12 d-flex align-items-center justify-content-between">
    <div>
      <h4 class="fs-16 mb-1">Nouvelle prestation</h4>
      <p class="text-muted mb-0">Créer une prestation</p>
    </div>
    <a href="{{ path('app_prestation_index') }}" class="btn btn-soft-secondary">
      <i class="ri-arrow-left-line me-1"></i> Retour
    </a>
  </div>
</div>
{% endblock %}

{% block body %}
<div class="card">
  <div class="card-body">
    {% include 'partials/flashes.html.twig' %}
    {% include 'prestation/_form.html.twig' with {'form': form, 'button_label':'Créer'} %}
  </div>
</div>
{% endblock %}
