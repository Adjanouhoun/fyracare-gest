{% extends 'layouts/main.html.twig' %}
{% block title %}Fiche client | Velzon{% endblock %}

{% block page_header %}
<div class="row mb-3 pb-1">
  <div class="col-12 d-flex align-items-center justify-content-between">
    <div>
      <h4 class="fs-16 mb-1">Fiche client</h4>
      <p class="text-muted mb-0">{{ client }}</p>
    </div>
    <div class="d-flex gap-2">
      <a href="{{ path('app_client_edit', {id: client.id}) }}" class="btn btn-soft-secondary">
        <i class="ri-pencil-line align-middle me-1"></i> Modifier
      </a>
      <a href="{{ path('app_client_index') }}" class="btn btn-soft-dark">
        <i class="ri-arrow-left-line align-middle me-1"></i> Retour
      </a>
    </div>
  </div>
</div>
{% endblock %}

{% block body %}
<div class="row">
  <div class="col-xl-8">
    <div class="card">
      <div class="card-body">
        <div class="row g-3">
          <div class="col-md-6">
            <label class="text-muted d-block mb-1">Nom complet</label>
            <div class="fw-semibold">{{ client }}</div>
          </div>
          <div class="col-md-6">
            <label class="text-muted d-block mb-1">Téléphone</label>
            <div class="fw-semibold">{{ client.telephone ?? '—' }}</div>
          </div>
          <div class="col-md-6">
            <label class="text-muted d-block mb-1">Email</label>
            <div class="fw-semibold">{{ client.email ?? '—' }}</div>
          </div>
          <div class="col-md-6">
            <label class="text-muted d-block mb-1">Créé le</label>
            <div class="fw-semibold">{{ client.createdAt ? client.createdAt|date('d/m/Y H:i') : '—' }}</div>
          </div>
          {% if client.address is defined %}
            <div class="col-12">
              <label class="text-muted d-block mb-1">Adresse</label>
              <div class="fw-semibold">{{ client.address ?? '—' }}</div>
            </div>
          {% endif %}
        </div>
      </div>
    </div>

    {# Historique RDV du client (optionnel si relation disponible) #}
    {% if client.rdvs is defined %}
    <div class="card">
      <div class="card-header d-flex align-items-center justify-content-between">
        <h5 class="card-title mb-0">Rendez-vous</h5>
        <a class="btn btn-sm btn-primary" href="{{ path('app_rdv_new', { clientId: client.id }) }}">
          <i class="ri-calendar-2-line me-1"></i> Prendre un rendez-vous
        </a>
      </div>
      <div class="card-body">
        <div class="table-responsive table-card">
          <table class="table align-middle table-nowrap mb-0">
            <thead class="table-light">
              <tr>
                <th>Date</th>
                <th>Prestation</th>
                <th>Statut</th>
                <th class="text-end">Actions</th>
              </tr>
            </thead>
            <tbody>
            {% for rdv in client.rdvs %}
              <tr>
                <td>{{ rdv.startAt ? rdv.startAt|date('d/m/Y H:i') : '—' }}</td>
                <td>{{ rdv.prestation ?? '—' }}</td>
                <td>
                  <span class="badge
                    {% if rdv.status == 'PLANIFIE' %} bg-info-subtle text-info
                    {% elseif rdv.status == 'HONORE' %} bg-success-subtle text-success
                    {% elseif rdv.status == 'ANNULE' %} bg-danger-subtle text-danger
                    {% else %} bg-secondary-subtle text-secondary {% endif %}">
                    {{ rdv.status ?? '—' }}
                  </span>
                </td>
                <td class="text-end">
                  <a href="{{ path('app_rdv_show',{id: rdv.id}) }}" class="btn btn-sm btn-soft-info"><i class="ri-eye-line"></i> Détails</a>
                </td>
              </tr>
            {% else %}
              <tr><td colspan="4" class="text-center text-muted">Aucun rendez-vous.</td></tr>
            {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
    {% else %}
      <div class="d-flex justify-content-end mb-3">
        <a class="btn btn-primary" href="{{ path('app_rdv_new', { clientId: client.id }) }}">
          <i class="ri-calendar-2-line me-1"></i> Prendre un rendez-vous
        </a>
      </div>
    {% endif %}
  </div>

  <div class="col-xl-4">
    <div class="card">
      <div class="card-header"><h5 class="card-title mb-0">Actions</h5></div>
      <div class="card-body d-grid gap-2">
        <a href="{{ path('app_rdv_new', { clientId: client.id }) }}" class="btn btn-primary">
          <i class="ri-add-line me-1"></i> Nouveau RDV
        </a>

        {{ include('client/_delete_form.html.twig') }}
      </div>
    </div>
  </div>
</div>
{% endblock %}
