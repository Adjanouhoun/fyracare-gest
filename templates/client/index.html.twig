{% extends 'layouts/main.html.twig' %}
{% block title %}Clients | Fyracare{% endblock %}

{% block page_header %}
<div class="row mb-3 pb-1">
  <div class="col-12 d-flex align-items-center justify-content-between flex-wrap gap-2">
    <div>
      <h4 class="fs-16 mb-1">Clients</h4>
      <p class="text-muted mb-0">Liste des clients avec recherche</p>
    </div>

    <form method="get" action="{{ path('app_client_index') }}" class="d-flex align-items-center gap-2">
      <div class="input-group">
        <input type="text" class="form-control" name="q" placeholder="Nom, email, téléphone" value="{{ q|default('') }}">
        <button class="btn btn-outline-secondary" type="submit">
          <i class="ri-search-line"></i>
        </button>
        {% if q %}
          <a class="btn btn-outline-dark" href="{{ path('app_client_index') }}" title="Effacer">
            <i class="ri-close-line"></i>
          </a>
        {% endif %}
      </div>
    </form>

    <a href="{{ path('app_client_new') }}" class="btn btn-primary">
      <i class="ri-add-circle-line align-middle me-1"></i> Nouveau client
    </a>
  </div>
</div>
{% endblock %}

{% block body %}
<div class="card">
  <div class="card-body">
    {% include 'partials/flashes.html.twig' %}

    <div class="table-responsive table-card">
      <table class="table table-hover align-middle table-nowrap mb-0">
        <thead class="table-light">
          <tr>
            <th>Nom & prénom</th>
            <th>Email</th>
            <th>Téléphone</th>
            <th>Créé le</th>
            <th class="text-end">Actions</th>
          </tr>
        </thead>
        <tbody>
        {% for c in pagination %}
          <tr>
            <td class="fw-medium">{{ c.nometprenom }}</td>
            <td>
              {% if c.email %}
                <a href="mailto:{{ c.email }}">{{ c.email }}</a>
              {% else %}
                <span class="text-muted">—</span>
              {% endif %}
            </td>
            <td>{{ c.telephone ?: '—' }}</td>
            <td>{{ c.createdAt ? c.createdAt|date('d/m/Y') : '—' }}</td>
            <td class="text-end">
              <a href="{{ path('app_client_show', {id: c.id}) }}" class="btn btn-sm btn-soft-info">
                <i class="ri-eye-line"></i> Voir
              </a>
              <a href="{{ path('app_client_edit', {id: c.id}) }}" class="btn btn-sm btn-soft-secondary">
                <i class="ri-pencil-line"></i> Modifier
              </a>
            </td>
          </tr>
        {% else %}
          <tr><td colspan="5" class="text-center text-muted">Aucun client</td></tr>
        {% endfor %}
        </tbody>
      </table>
    </div>

    <div class="mt-3 d-flex justify-content-center">
      {{ knp_pagination_render(pagination) }}
    </div>
  </div>
</div>
{% endblock %}
