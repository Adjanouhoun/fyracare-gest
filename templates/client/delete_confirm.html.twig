{% extends 'layouts/main.html.twig' %}
{% block title %}Confirmation de suppression | Fyracare{% endblock %}

{% block page_header %}
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <div>
                <h4 class="mb-sm-0">
                    <i class="ri-delete-bin-line text-danger"></i>
                    Confirmation de suppression du client
                </h4>
                <p class="text-muted mb-0">Vérifiez tous les éléments qui seront supprimés</p>
            </div>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('app_client_index') }}">Clients</a></li>
                    <li class="breadcrumb-item active">Confirmation suppression</li>
                </ol>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <div class="card border-danger">
            <div class="card-header bg-danger-subtle">
                <h5 class="card-title text-danger mb-0">
                    <i class="ri-alert-line"></i> ATTENTION : Cette action est IRRÉVERSIBLE !
                </h5>
            </div>
            <div class="card-body">
                <div class="alert alert-danger" role="alert">
                    <h6 class="alert-heading"><i class="ri-error-warning-line"></i> Vous êtes sur le point de supprimer ce client</h6>
                    <p class="mb-0">Tous les éléments suivants seront également supprimés de manière <strong>DÉFINITIVE</strong> :</p>
                    <ul class="mt-2">
                        <li>Tous ses rendez-vous</li>
                        <li>Tous ses paiements</li>
                        <li>Tous les mouvements de caisse liés</li>
                    </ul>
                </div>

                {# Informations du client #}
                <div class="card mb-3 border-info">
                    <div class="card-header bg-info-subtle">
                        <h5 class="mb-0 text-info">
                            <i class="ri-user-3-line"></i> Informations du client
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <strong>Nom complet :</strong> {{ client.nometprenom }}
                            </div>
                            <div class="col-md-6">
                                <strong>Téléphone :</strong> {{ client.telephone }}
                            </div>
                            <div class="col-md-6">
                                <strong>Email :</strong> {{ client.email ?? '—' }}
                            </div>
                            <div class="col-md-6">
                                <strong>Client depuis :</strong> {{ client.createdAt ? client.createdAt|date('d/m/Y') : '—' }}
                            </div>
                        </div>
                    </div>
                </div>

                {# Statistiques #}
                <div class="row g-3 mb-3">
                    <div class="col-md-4">
                        <div class="card bg-primary-subtle border-primary">
                            <div class="card-body text-center">
                                <h3 class="mb-1 text-primary">{{ rdvs|length }}</h3>
                                <p class="mb-0 small">Rendez-vous</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card bg-warning-subtle border-warning">
                            <div class="card-body text-center">
                                <h3 class="mb-1 text-warning">{{ payments|length }}</h3>
                                <p class="mb-0 small">Paiements</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card bg-info-subtle border-info">
                            <div class="card-body text-center">
                                <h3 class="mb-1 text-info">{{ cashMovements|length }}</h3>
                                <p class="mb-0 small">Mouvements de caisse</p>
                            </div>
                        </div>
                    </div>
                </div>

                {# Rendez-vous #}
                {% if rdvs|length > 0 %}
                <div class="card mb-3 border-primary">
                    <div class="card-header bg-primary-subtle">
                        <h5 class="mb-0 text-primary">
                            <i class="ri-calendar-2-line"></i>
                            {{ rdvs|length }} Rendez-vous à supprimer
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-sm table-bordered">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Prestation</th>
                                        <th>Prix</th>
                                        <th>Statut</th>
                                        <th>Paiement</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for rdv in rdvs %}
                                    <tr>
                                        <td>{{ rdv.startAt ? rdv.startAt|date('d/m/Y H:i') : '—' }}</td>
                                        <td>{{ rdv.prestation ? rdv.prestation.libelle : '—' }}</td>
                                        <td class="text-end">{{ rdv.totalAmount|number_format(0, ',', ' ') }} MRU</td>
                                        <td>
                                            <span class="badge
                                                {% if rdv.status == 'PLANIFIE' %} bg-info
                                                {% elseif rdv.status == 'CONFIRME' %} bg-primary
                                                {% elseif rdv.status == 'HONORE' %} bg-success
                                                {% elseif rdv.status == 'ANNULE' %} bg-danger
                                                {% elseif rdv.status == 'ABSENT' %} bg-warning
                                                {% else %} bg-secondary {% endif %}">
                                                {{ rdv.status ?? '—' }}
                                            </span>
                                        </td>
                                        <td>
                                            {% if rdv.paymentStatus == constant('App\\Entity\\Rdv::PS_PAYE') %}
                                                <span class="badge bg-success">Payé</span>
                                            {% elseif rdv.paymentStatus == constant('App\\Entity\\Rdv::PS_PARTIEL') %}
                                                <span class="badge bg-warning">Partiel</span>
                                            {% else %}
                                                <span class="badge bg-secondary">Non payé</span>
                                            {% endif %}
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                {% endif %}

                {# Paiements #}
                {% if payments|length > 0 %}
                <div class="card mb-3 border-warning">
                    <div class="card-header bg-warning-subtle">
                        <h5 class="mb-0 text-warning">
                            <i class="ri-money-dollar-circle-line"></i>
                            {{ payments|length }} Paiement(s) à supprimer
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-sm table-bordered">
                                <thead>
                                    <tr>
                                        <th>N° Reçu</th>
                                        <th>Date</th>
                                        <th>RDV</th>
                                        <th>Montant</th>
                                        <th>Méthode</th>
                                        <th>Type</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for payment in payments %}
                                    <tr>
                                        <td>{{ payment.receiptNumber }}</td>
                                        <td>{{ payment.paidAt|date('d/m/Y H:i') }}</td>
                                        <td>
                                            {% if payment.rdv %}
                                                {{ payment.rdv.startAt|date('d/m/Y H:i') }}
                                            {% else %}
                                                —
                                            {% endif %}
                                        </td>
                                        <td class="text-end">{{ payment.amount|number_format(0, ',', ' ') }} MRU</td>
                                        <td>{{ payment.methode }}</td>
                                        <td>
                                            {% if payment.isDeposit %}
                                                <span class="badge bg-info">Acompte</span>
                                            {% else %}
                                                <span class="badge bg-success">Paiement final</span>
                                            {% endif %}
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                                <tfoot>
                                    <tr class="fw-bold">
                                        <td colspan="3" class="text-end">Total des paiements :</td>
                                        <td class="text-end">
                                            {% set totalPayments = 0 %}
                                            {% for payment in payments %}
                                                {% set totalPayments = totalPayments + payment.amount %}
                                            {% endfor %}
                                            {{ totalPayments|number_format(0, ',', ' ') }} MRU
                                        </td>
                                        <td colspan="2"></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
                {% endif %}

                {# Mouvements de caisse #}
                {% if cashMovements|length > 0 %}
                <div class="card mb-3 border-info">
                    <div class="card-header bg-info-subtle">
                        <h5 class="mb-0 text-info">
                            <i class="ri-wallet-3-line"></i>
                            {{ cashMovements|length }} Mouvement(s) de caisse à supprimer
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-sm table-bordered">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Type</th>
                                        <th>Montant</th>
                                        <th>Source</th>
                                        <th>Notes</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for movement in cashMovements %}
                                    <tr>
                                        <td>{{ movement.createdAt|date('d/m/Y H:i') }}</td>
                                        <td>
                                            <span class="badge {{ movement.type == 'IN' ? 'bg-success' : 'bg-danger' }}">
                                                {{ movement.type == 'IN' ? 'Entrée' : 'Sortie' }}
                                            </span>
                                        </td>
                                        <td class="text-end">{{ movement.amount|number_format(0, ',', ' ') }} MRU</td>
                                        <td>{{ movement.source }}</td>
                                        <td class="small">{{ movement.notes|default('—') }}</td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                                <tfoot>
                                    <tr class="fw-bold">
                                        <td colspan="2" class="text-end">Total :</td>
                                        <td class="text-end">
                                            {% set totalCash = 0 %}
                                            {% for movement in cashMovements %}
                                                {% set totalCash = totalCash + movement.amount %}
                                            {% endfor %}
                                            {{ totalCash|number_format(0, ',', ' ') }} MRU
                                        </td>
                                        <td colspan="2"></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
                {% endif %}

                {# Récapitulatif final #}
                <div class="card bg-danger-subtle border-danger">
                    <div class="card-body">
                        <h5 class="text-danger mb-3">
                            <i class="ri-information-line"></i> Récapitulatif de la suppression
                        </h5>
                        <ul class="list-unstyled mb-0">
                            <li class="mb-2"><strong>✗ 1</strong> Client : {{ client.nometprenom }}</li>
                            <li class="mb-2"><strong>✗ {{ rdvs|length }}</strong> Rendez-vous</li>
                            <li class="mb-2"><strong>✗ {{ payments|length }}</strong> Paiement(s)</li>
                            <li class="mb-2"><strong>✗ {{ cashMovements|length }}</strong> Mouvement(s) de caisse</li>
                        </ul>
                        {% if payments|length > 0 %}
                        <hr>
                        <p class="text-danger fw-bold mb-0">
                            <i class="ri-money-dollar-circle-line"></i>
                            Total des paiements à supprimer : 
                            {% set totalPayments = 0 %}
                            {% for payment in payments %}
                                {% set totalPayments = totalPayments + payment.amount %}
                            {% endfor %}
                            {{ totalPayments|number_format(0, ',', ' ') }} MRU
                        </p>
                        {% endif %}
                    </div>
                </div>

                {# Boutons d'action #}
                <div class="mt-4 d-flex gap-2">
                    <form method="post" action="{{ path('app_client_delete', {id: client.id}) }}" onsubmit="return confirm('⚠️ DERNIÈRE CONFIRMATION ⚠️\n\nVous êtes sur le point de supprimer définitivement :\n- Le client {{ client.nometprenom }}\n- {{ rdvs|length }} rendez-vous\n- {{ payments|length }} paiements\n- {{ cashMovements|length }} mouvements de caisse\n\nCette action est IRRÉVERSIBLE !\n\nTapez OK pour confirmer.');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ client.id) }}">
                        <button type="submit" class="btn btn-danger btn-lg">
                            <i class="ri-delete-bin-line"></i>
                            Confirmer la suppression définitive
                        </button>
                    </form>
                    <a href="{{ path('app_client_show', {id: client.id}) }}" class="btn btn-secondary btn-lg">
                        <i class="ri-close-line"></i>
                        Annuler et retourner
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
