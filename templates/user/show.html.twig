{% extends 'layouts/main.html.twig' %}
{% block title %}Voir utilisateur{% endblock %}

{% block page_header %}
	<div class="row">
		<div class="col-12">
			<div class="page-title-box d-sm-flex align-items-center justify-content-between">
				<div>
					<h4 class="mb-sm-0">
						<i class="ri-user-line"></i>
						Gestion des utilisateurs
					</h4>
					<p class="text-muted mb-0">Voir - Modifier</p>
				</div>
				<div class="page-title-right">
					<ol class="breadcrumb m-0">
						<li class="breadcrumb-item">
							<a href="{{ path('admin_dashboard') }}">Dashboard</a>
						</li>
						<li class="breadcrumb-item active">Utilisateurs</li>
					</ol>
				</div>
			</div>
		</div>
	</div>
	<div class="card">
		<div class="card-body">
			<div class="row mb-3 pb-1">
				<div class="d-flex align-items-center justify-content-between">
    <div>
      <h4 class="fs-16 mb-1">{{ user.fullname }}</h4>
      <p class="text-muted mb-0">{{ user.email }}</p>
    </div>
    <div class="d-flex gap-2">
      <a class="btn btn-soft-info" href="{{ path('app_user_edit', {id: user.id}) }}">
        <i class="ri-pencil-line align-middle me-1"></i> Modifier
      </a>
      <a class="btn btn-soft-secondary" href="{{ path('app_user_index') }}">Retour</a>
    </div>
  </div>
			</div>
		</div>
	</div>
{% endblock %}
{% block body %}
  <div class="card"><div class="card-body">
    <dl class="row mb-0">
      <dt class="col-sm-3">Nom complet</dt><dd class="col-sm-9">{{ user.fullname }}</dd>
      <dt class="col-sm-3">Email</dt><dd class="col-sm-9">{{ user.email }}</dd>
      <dt class="col-sm-3">Fonction</dt><dd class="col-sm-9">{{ user.fonction ?: '—' }}</dd>
      <dt class="col-sm-3">Rôles</dt>
      <dd class="col-sm-9">
        {% for r in user.roles %}
          <span class="badge bg-secondary-subtle text-secondary">{{ r }}</span>
        {% endfor %}
      </dd>
    </dl>
  </div></div>
{% endblock %}
