{% extends 'layouts/main.html.twig' %}
{% block title %}Nouvelle catégorie{% endblock %}

{% block page_header %}
  <div class="d-flex justify-content-between align-items-center">
    <h4 class="fs-16 mb-0">Créer une catégorie</h4>
    <a class="btn btn-ghost-secondary" href="{{ path('expense_cat_index') }}"><i class="ri-arrow-left-line"></i> Retour</a>
  </div>
{% endblock %}

{% block body %}
  <div class="card"><div class="card-body">
    {{ form_start(form) }}
      <div class="row g-3">
        <div class="col-md-8">{{ form_row(form.name) }}</div>
        <div class="col-md-4">{{ form_row(form.color) }}</div>
      </div>
      <div class="mt-3">
        <button class="btn btn-primary"><i class="ri-check-line"></i> Enregistrer</button>
      </div>
    {{ form_end(form) }}
  </div></div>
{% endblock %}
